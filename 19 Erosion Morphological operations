import cv2
import numpy as np

# 1. Load the image
path = r'C:\Users\HP\Documents\openCV\sample.jpg'
img = cv2.imread(path)

if img is None:
    print("Error: Image not found.")
else:
    # 2. Convert to Grayscale
    gray = cv2.cvtColor(img, cv2.COLOR_BGR2GRAY)

    # 3. Create a Kernel
    # The size (5,5) determines how much to erode. 
    # Larger kernel = more erosion.
    kernel = np.ones((5, 5), np.uint8)

    # 4. Perform Erosion
    # iterations=1 is standard; increase it to erode more without changing kernel size
    erosion = cv2.erode(gray, kernel, iterations=1)

    # 5. Display Results
    cv2.imshow('Original Gray', gray)
    cv2.imshow('Erosion Result', erosion)

    cv2.waitKey(0)
    cv2.destroyAllWindows()
