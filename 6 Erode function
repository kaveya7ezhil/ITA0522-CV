import cv2
import os

# 1. Provide the exact path to your file
# Use 'r' before the quotes to handle Windows backslashes
video_source = r"C:\Users\HP\Documents\openCV\vedio.mp4" 

# 2. Check if the file exists before starting
if not os.path.exists(video_source):
    print(f"Error: Could not find the file at {video_source}")
else:
    cap = cv2.VideoCapture(video_source)
    
    # 3. Fix the "Zoom" by creating a resizable window
    cv2.namedWindow("Resized Video", cv2.WINDOW_NORMAL)
    cv2.resizeWindow("Resized Video", 800, 600) # Set to a size that fits your screen

    while cap.isOpened():
        ret, frame = cap.read()
        
        if not ret:
            print("Video playback finished.")
            break
        
        # 4. Display the frame in the resizable window
        cv2.imshow("Resized Video", frame)
        
        # Press 'q' to exit; 25ms delay for normal speed
        if cv2.waitKey(25) & 0xFF == ord('q'):
            break

    cap.release()
    cv2.destroyAllWindows()
